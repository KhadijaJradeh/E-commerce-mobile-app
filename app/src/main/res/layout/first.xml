<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:title="My favorites"
    tools:context=".FirstFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_height="95dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="#00ffdd">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/showevents"
            android:textSize="14sp"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#FFF"
            android:text="Logout"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheap Shop"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="#FFF"
            android:id="@+id/toolbar_title" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginTop="65dp"
            android:paddingLeft="15dp"
            android:src="@drawable/transparentsearch"/>
                <AutoCompleteTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/autocomplete_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:layout_marginTop="48dp"
                    android:hint="Search by postcode, name etc"/>-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:paddingLeft="70dp"
            android:text="Turn on GPS to see nearby food vendors" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundedbutton"
            android:text="Turn on" />
    </LinearLayout>


</FrameLayout>